{
  "name": "claude-code-gui",
  "productName": "Claude Code",
  "version": "1.0.0",
  "description": "A native GUI wrapper for Claude Code CLI with integrated file browser, document viewer, and web browser",
  "author": "Marc Gyongyosi",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/MarcGyongyosi/ClaudeCodeX.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.marcgyongyosi.claudecodex",
    "productName": "Claude Code",
    "copyright": "Copyright Â© 2025 Marc Gyongyosi",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        },
        {
          "target": "zip",
          "arch": ["universal"]
        }
      ],
      "icon": "assets/icon.icns",
      "darkModeSupport": true
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Development"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!.git/**/*",
      "!.gitignore"
    ],
    "extraResources": [
      "assets/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "MarcGyongyosi",
      "repo": "ClaudeCodeX"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "mammoth": "^1.11.0",
    "node-pty": "^1.1.0",
    "papaparse": "^5.5.3",
    "pdfjs-dist": "^5.4.530",
    "xlsx": "^0.18.5",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
  }
}
